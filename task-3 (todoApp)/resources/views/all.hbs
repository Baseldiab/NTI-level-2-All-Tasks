{{>header}}

<section class="container my-4">
    <form class="d-flex m-y-5 " role="search" method="get" action="/search/?{{search}}">
        <input class="form-control me-2 justify-content-end" type="search" placeholder="Search" name="search">
        <button class="btn btn-outline-success text-light bg-primary" type="submit">Search</button>
    </form>
        <table class="table table-stripped">
            <thead>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Date</th>
                <th>Status</th>
                <th>Action</th>
            </thead>
            <tbody id="userWrap">
                {{#if hasData}}
                {{#each allUsers}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{title}}</td>
                    <td>{{content}}</td>
                    <td>{{date}}</td>
                    <td> {{status}} </td>
                    <td>
                        <a href="/single/{{id}}" class="mx-2 btn btn-primary">show</a>
                        <a href="/editPost/{{id}}" class="mx-2 btn btn-warning">Edit</a>
                        <a href="/deletSingle/{{id}}" class="mx-2 btn btn-danger">Delete</a>
                        <a href="/activate/{{id}}" class="mx-2 btn btn-danger">Edit status</a>
                        
                    </td>
                </tr>
                {{/each}}
                {{else}}
                <td colspan="5" > Not user found</td>
                {{/if}}
            </tbody>
        </table>
    </section>


{{>footer}}